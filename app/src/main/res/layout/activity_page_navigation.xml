<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PageNavigation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/theblacklight"
        android:text="FlavourEcipe"
        android:textColor="@color/black"
        android:textSize="80dp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_myrecipes"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lilac"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="121dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:src="@drawable/plusss">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="My Recipes"
                android:textColor="@color/white"
                android:textSize="45dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_recipesrec"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lilac"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="121dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:src="@drawable/m2">

            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Recipes For You"
                android:textColor="@color/white"
                android:textSize="40dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lilac"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:ignore="DuplicateIds">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="121dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:src="@drawable/m4">

            </ImageView>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="50dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>